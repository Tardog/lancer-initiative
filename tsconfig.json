{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist/",
    "module": "es2020",
    "sourceMap": true,
    "inlineSources": true,
    "lib": ["ES6", "ES2017", "DOM"],
    "types": ["@league-of-foundry-developers/foundry-vtt-types"],
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": false,
    "importHelpers": true,
    "declaration": false,
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      }
    ]
  },
  "include": [
      "src"
  ]
}
